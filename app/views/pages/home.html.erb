<div class="home">
  <div class='header' style="background-image: linear-gradient(rgba(0,0,0,0.25), rgba(0,0,0,0.25)), url(<%= asset_path('banner2.jpg') %>)">
      <div class="header-text">
      <h1>Shoes-Me</h1>
      <button type="button" class="blue-btn" data-toggle="modal" data-target="#learnhere">
        Learn More Here!
      </button>
      </div>
  </div>
  <div class="home-call py-4 border-top border-bottom mx-3 mb-3">
    <% if user_signed_in? %>
      <div class='blue-btn special home-btn' data-toggle="modal" data-target="#outfitModal">
        UPLOAD NEW OUTFIT
      </div>
    <% end %>
    <br>
    <%= link_to 'TAKE ME TO THE FEED', outfits_path, class: 'logout home-btn text-decoration-none'  %>
  </div class='container pbbig mt-5'>
    <h5 class='home-trend py-2 pb-3 '>Our trends <%= image_tag 'flame.png', class: 'home-icon'%></h5>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="https://footwearnews.com/wp-content/uploads/2018/10/rexfeatures_9065733ar.jpg?w=700&h=437&crop=1" class="d-block w-100 carousel-height" alt="...">
        </div>
        <div class="carousel-item">
          <img src="https://media.gucci.com/content/PromoComponent_Small_375x234/1620038705/PromoComponent_OUVERTURE-21-057_001_Default.jpg" class="d-block w-100 carousel-height" alt="...">
        </div>
        <div class="carousel-item">
          <img src="https://editorialist.com/wp-content/uploads/2021/05/Chunky-Sneakers_Hero.jpg" class="d-block w-100 carousel-height" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</div>

<!-- modal2 -->

<div class="modal fade" id="learnhere" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">How it works</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ol>
          <li>Upload your outifit image & up to 3 shoe images </li>
          <li>We'll recommend a 4th option for you</li>
          <li>Our users will vote on the pair that best suits your outfit</li>
          <li>You can choose to buy the recommended pair or save it to your wishlist and buy later</li>
          <li>Look fabulous knowing that you have the votes of many users on your final look!</li>
        </ol>
      </div>
      <div class="modal-footer">
        <% if user_signed_in? %>
          <%= link_to "See all the outfits!", outfits_path, class: "blue-btn"  %>
        <% else %>
          <%= link_to 'Sign up here', new_user_registration_path, class: "nav-log" %>
        <% end %>
<!--         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
      </div>
    </div>
  </div>
</div>
