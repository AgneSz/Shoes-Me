<div>
  <div class="top-bar">
    <%= image_tag @user.avatar, alt: "alttext", class: 'avatar mr-3' %>
    <div>
      <h5><%= @user.username %></h5>
      <p><%= @user.email %></p>
    </div>
  </div>
  <div class="fcen">
    <div class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      UPLOAD
    </div>
  </div>
  <div class="pink-bar">
    Completed Looks
  </div>
  <div class="f-row">
    <% current_user.outfits.each do |outfit| %>
      <%= render "shared/outfit", outfit: outfit %>
    <% end %>
  </div>
  <div class="pink-bar">
    Wishlist
    <!-- # wishlist - only auto generated in next project phase - atm placeholder -->
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New outfit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [current_user, @outfit] do |f| %>
          <%= f.input :brand %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
