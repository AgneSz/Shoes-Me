<div>
  <div class="top-bar">
    <%= image_tag @user.avatar.attached? ? @user.avatar : "photo.png", alt: "alttext", class: 'avatar mr-3' %>
    <div>
      <div class="user-info">
        <h5>@<%= @user.username %></h5>
        <p><%= current_user.outfits.length %> outfits completed</p>
      </div>
    </div>
    <div class="btn-group dropleft dropdown-options">
      <i class="fas fa-ellipsis-v" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <div class="dropdown-menu">
        <%= link_to "Edit profile", edit_user_registration_path, class:'edit-user' %>
        <%= link_to "Log out", destroy_user_session_path, class:'logout', method: :delete %>
      </div>
    </div>
  </div>
  <div class="fcen">
    <div class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
      UPLOAD OUTFIT
    </div>
  </div>
  <div class="border-top">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item col-6">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">
        <h5 class="completed-look">Completed Looks</h5></a>
      </li>
      <li class="nav-item col-6">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">
        <h5 class="wishlist">Wishlist</h5></a>
        <!-- wishlist - only auto generated in next project phase - atm placeholder -->
      </li>
    </ul>
  </div>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

        <div class="user-cards">
        <% current_user.outfits.each do |outfit| %>
          <%= link_to outfit_path(outfit), class:'show-link' do %>
            <%= render "shared/outfit", outfit: outfit %>
          <% end %>
        <% end %>
        </div>

    </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">profile</div>

</div>

<!-- modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New outfit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= render "outfits/form", outfit: @outfit, user: @user %>
      </div>
    </div>
  </div>
</div>
