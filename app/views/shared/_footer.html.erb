<footer>
  <div class="list-footer">
    <ul>
      <li>
        <%= link_to "/" do %>
      <%= image_tag 'home.png' %>
      <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <div data-toggle="modal" data-target="#outfitModal">
            <%= image_tag 'photo.png' %>
          </div>
        <% end %>
      </li>
      <li>
        <%= link_to outfits_path do %>
          <%= image_tag 'social-media.png' %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li>
            <%= link_to user_path(current_user) do %>
              <%= image_tag current_user.avatar.attached? ? current_user.avatar : "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown" %>
            <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</footer>


<% if user_signed_in? %>
        <div class='blue-btn special' data-toggle="modal" data-target="#outfitModal">
        UPLOAD NEW OUTFIT
        </div>
      <% end %>


<!-- modal -->
<% if user_signed_in? %>
<div class="modal fade" id="outfitModal" tabindex="-1" role="dialog" aria-labelledby="outfitModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">New outfit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <%= render "outfits/form", outfit: @new_outfit, user: current_user %>
      </div>
    </div>
  </div>
</div>
<% end %>
