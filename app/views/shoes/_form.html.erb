<div class="margin-container">
   <%= simple_form_for [@outfit, @shoe] do |f| %>
    <%= f.association :categories,
      as: :check_boxes,
      item_wrapper_class: 'category-item',
      input_html: {class: 'category-selector', multiple: false },
      collection: Category.where(shoe:true).slice(16...25),
      label:"Style:",
      label_method: lambda { |category| category.name.humanize} %>

    <%= f.association :categories,
      as: :check_boxes,
      item_wrapper_class: 'category-item',
      input_html: {class: 'category-selector'},
      collection: Category.where(shoe:true).last(3),
      label:"Heel Height:",
      label_method: lambda { |category| category.name.humanize} %>

    <%= f.association :categories,
      as: :check_boxes,
      item_wrapper_class: 'category-item',
      input_html: {class: 'category-selector'},
      collection: Category.where(shoe:true).first(16),
      label:"Colour:",
      label_method: lambda { |category| category.name.humanize} %>

    <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
    <%= f.input :photo, as: :file, input_html: { class: "", id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>

    <% if @shoe.new_record? %>
      <%= f.submit "Create your shoes!", class: "blue-btn" %>
    <% else %>
      <%= f.submit "Edit your shoes!", class: "btn btn-warning" %>
    <% end %>
  <% end %>
</div>


